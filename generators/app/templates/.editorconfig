# EditorConfig: http://editorconfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.md,*.hbs}]
trim_trailing_whitespace = false

[{*.json,*.yml,*.html,*.hbs}]
indent_style = space
indent_size = 2
